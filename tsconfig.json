{
  "compilerOptions": {
    "outDir": ".",
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "lib": ["es6"],
    "rootDirs": [
      ".",
